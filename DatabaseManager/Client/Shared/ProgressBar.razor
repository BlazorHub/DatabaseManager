<div class="progress">
    <div class="progress-bar"
         role="progressbar"
         style="width: @Width"
         aria-valuenow="@ValueNow"
         aria-valuemin="0"
         aria-valuemax="100">
        @if (!string.IsNullOrWhiteSpace(Label))
        {
            @Label
        }
    </div>
</div>

